<%- include('partials/header.ejs') %>
  <body>
    <%- include('partials/navbar.ejs') %>
    <div class="container  col-xl-10 col-xxl-8 px-4 py-5">
      <div class="row align-items-center g-lg-5 py-5">
        <% if(locals.error) { %>
        <div class="p-3 text-white mx-auto">
          <div class="col-sm-9 col-md-7 col-lg-5 mx-auto bg-danger card border-0 shadow rounded-3 my-5">
            <h3 class="card-title text-center fw-light fs-5">
              <b><%= error %></b>
            </h3>
          </div>
        </div>
        <% } %>

        <!-- First column section: Text content-->
        <div class="col-lg-7 text-center text-lg-start">
          <h1 class="display-4 fw-bold lh-1 mb-3">Login</h1>
          <p class="col-lg-10 fs-4">Login so you can book G2/G drive test from this Kiosk.</p>
        </div>

        <!-- Login Section -->
        <div class="col-sm-9 col-md-10 col-lg-5 mx-auto">
          <div class="card border shadow rounded-3 my-5 bg-dark">
            <div class="card-body p-4 p-sm-5">
              <h3 class="text-center mb-5 text-white">Login</h3>
              <form id="msLoginForm" action="/loginIn" method="post">
                <div class="form-floating mb-3">
                  <input
                    type="text"
                    name="txtUser"
                    class="form-control"
                    id="floatingInput"
                    placeholder="name@example.com"
                    required
                  />
                  <label for="floatingInput">Email address</label>
                </div>
                <div class="form-floating mb-3">
                  <input
                    type="password"
                    name="txtPassword"
                    class="form-control"
                    id="floatingPassword"
                    placeholder="Password"
                    required
                  />
                  <label for="floatingPassword">Password</label>
                </div>

                <div class="d-grid">
                  <button class="w-100 btn btn-lg btn-primary btn-login" type="submit">Sign in</button>
                </div>
                <hr class="my-4 text-muted">
                <small class="text-muted">By clicking 'Sign in', you agree to the <a href="#">terms of use.</a></small>
              </form>
            </div>
          </div>
        </div>
        <hr>

        <!-- Sign Up Section -->
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
          <div class="card border shadow rounded-3 my-5 bg-dark">
            <div class="card-body p-4 p-sm-5">
              <h3 class="text-center mb-5 text-white">Sign Up</h3>
              <form id="msform" action="/sign_up" method="post">
                <div class="form-floating mb-3">
                  <input
                    type="text"
                    name="txtUserName"
                    class="form-control"
                    id="floatingInput"
                    placeholder="name@example.com"
                    required
                  />
                  <label for="floatingInput">Username</label>
                </div>
                <div class="form-floating mb-3">
                  <input
                    type="password"
                    name="txtPassword"
                    class="form-control"
                    id="floatingPassword"
                    placeholder="Password"
                    required
                  />
                  <label for="floatingPassword">Password</label>
                </div>
                <div class="form-floating mb-3">
                  <input
                    type="password"
                    name="txtConfirmPassword"
                    class="form-control"
                    id="floatingPassword"
                    placeholder="Password"
                    required
                  />
                  <label for="floatingPassword">Confirm Password</label>
                </div>
                <div class="form-floating mb-3">
                  <select class="form-control" name="txtUserType" required>
                    <option>Driver</option>
                    <option>Examiner</option>
                    <option>Admin</option>
                  </select>
                  <label for="floatingInput">User Type</label>
                </div>
                <div class="d-grid">
                  <button class="w-100 btn btn-lg btn-primary btn-login" type="submit">Sign Up</button>
                </div>
                <hr class="my-4 text-muted">
                <small class="text-muted">By clicking 'Sign Up', you agree to the <a href="#">terms of use.</a></small>
              </form>
            </div>
          </div>
        </div>
        
        <!-- Second column section: Text content-->
        <div class="col-lg-7 text-center text-lg-start">
          <h1 class="display-4 fw-bold lh-1 mb-3">Sign Up</h1>
          <p class="col-lg-10 fs-4">Create an account so you can book G2/G drive test from this Kiosk.</p>
        </div>

      </div>
      <hr class="hr" />
    </div>    
    <%- include('partials/footer.ejs') %>
  </body>
</html>
